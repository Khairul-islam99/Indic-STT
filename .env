
# Hugging Face Access Token
# Required only if the model becomes gated/private in the future
# Get it from: https://huggingface.co/settings/tokens
HF_TOKEN=""

# Model Configuration
MODEL_NAME=ai4bharat/indic-conformer-600m-multilingual

# Inference Device
# Use "cuda" for GPU acceleration (recommended for production)
# Use "cpu" for CPU-only servers
DEVICE=cuda

# Decoding Method
# "rnnt" provides the best accuracy for Bengali
# "ctc" is faster but lower quality
DECODING_METHOD=rnnt

# Audio Sample Rate
# The model expects 16kHz audio
SAMPLE_RATE=16000